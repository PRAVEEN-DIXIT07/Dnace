extends base.pug
block scripts
    script(src="/static/index.js")

block style
    style
      include ../static/style.css

block content


    section#introsection
           div Welcome to Praveen's Dance Academy
           div.small Let the music play

    section#missionsection
            h2 Our Mission
            div#container
                div.card
                    h3 Dance Perfection
                    div.card-box
                        div.card-img
                          img(src="/static/img/image1.png")
                        div.card-container
                            p We aim for perfection
                div.card
                    h3 Dance as the way you like
                    div.card-box
                        div.card-img
                          img(src="/static/img/image2new.png")
                        div.card-container
                            p Bring out the dancer within you
                div.card
                    h3 Expert Coaching
                    div.card-box
                        div.card-img
                          img(src="/static/img/image3.png")
                        div.card-container
                            p World's best mentors available
    section#sponsorsection
           h2 Our Sponsors
           div#sponsors
              img(src="/static/img/sponsor1.png",alt="sponsor image" , class="spimage")
              img(src="/static/img/sponsor2.png",alt="sponsor image" , class="spimage")
              img(src="/static/img/sponsor3.jpg",alt="sponsor image" , class="spimage")
              img(src="/static/img/sponsor4.png",alt="sponsor image" , class="spimage")
              img(src="/static/img/hp.png",alt="sponsor image" , class="spimage")
              img(src="/static/img/starbucks.jpg",alt="sponsor image" , class="spimage")
